<div class="container">
  <h1>Contact Form</h1>
  <%= form_for @contact do |f| %>
    <div class="col-md-8">
      <%= f.text_field  :name, required: true, class: "contact-form-text-area", placeholder: "Full Name"%>
      <%= f.text_field :email, required: true, class: "contact-form-text-area", placeholder: "E-mail Address" %>
      <%= f.text_area :message, rows: 8, cols: 40, required: true, class: "contact-form-text-area",
            placeholder: "Write your request here."%>
      <br>
      <%= f.submit 'Send', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
